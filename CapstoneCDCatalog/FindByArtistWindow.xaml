<Window x:Class="CapstoneCDCatalog.FindByArtistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapstoneCDCatalog"
        mc:Ignorable="d"
        Title="FindByArtistWindow" Height="435.083" Width="723.822">
    <Grid>
        <Label x:Name="findbyArtistLabel" Content="What artist would you like to find information on?" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="findByArtistComboBox" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Width="266" SelectionChanged="findByArtistComboBox_SelectionChanged"/>
        <DataGrid x:Name="findSongsByArtistDataGrid" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Height="173" Width="692" AutoGeneratingColumn="findSongsByArtistDataGrid_AutoGeneratingColumn"/>
        <Button x:Name="searchButton" Content="Search" HorizontalAlignment="Left" Margin="288,31,0,0" VerticalAlignment="Top" Width="75" Click="searchButton_Click"/>
        <DataGrid x:Name="findCdsByArtistDataGrid" HorizontalAlignment="Left" Margin="10,236,0,0" VerticalAlignment="Top" Height="159" Width="692" AutoGeneratingColumn="findCdsByArtistDataGrid_AutoGeneratingColumn"/>

    </Grid>
</Window>
